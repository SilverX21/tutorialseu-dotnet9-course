@inherits LayoutComponentBase

<div class="layout">
    <div class="header">
        <div>
            <a>@today.ToString("dddd, dd MMMM yyyy")</a>
        </div>
    </div>

    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="content">
        <p>@Body</p>
    </div>

    <div class="footer">
        <footer>
            @footerMessage
        </footer>
    </div>
</div>

@code {
    private DateTime today = DateTime.Today;
    private string footerMessage { get; set; } = "Great Shopping";
}