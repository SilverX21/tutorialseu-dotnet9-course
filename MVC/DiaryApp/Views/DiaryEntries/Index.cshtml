@model List<DiaryEntry>

@{
    ViewData["Title"] = "Entries";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <!-- asp-controller is que controller we want to make the call | asp-action is the action inside the controller | the asp-area is the folder where the controller is. These helper tags are inside the DLLs of the MVC.TagHelpers (it's being imported in the _ViewImports.cshtml) -->
            <a class="btn btn-primary" asp-controller="DiaryEntries" asp-action="Create">
                <i class="bi bi-journal-plus"></i> Create new diary entry
            </a>
        </div>
        <div class="col-6 text-end">
            <h2>Diary Entries</h2>
        </div>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entry in Model)
            {
                <tr>
                    <td>@entry.Title</td>
                    <td>@entry.Content</td>
                    <td>@entry.Created</td>
                    <td>
                        <!--we use asp-route-id="entry.Id" to pass the id of the diary entry to the route of the url, with this the id will be passed to our Edit endpoint in the controller-->
                        <a asp-controller="DiaryEntries" asp-action="Edit" asp-route-id="@entry.Id" class="btn btn-primary btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-controller="DiaryEntries" asp-action="Delete" asp-route-id="@entry.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>